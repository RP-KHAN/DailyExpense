<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="@dimen/_270sdp"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/_30ssp"
    android:background="@android:color/holo_purple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15ssp">

        <TextView
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_35ssp"
            android:text="Break_Fast"
            android:textSize="@dimen/_15ssp"
            android:layout_marginLeft="@dimen/_15ssp"
            android:layout_marginTop="@dimen/_20ssp"
            android:gravity="center"
            android:textColor="@color/white"
            />
        <EditText
            android:id="@+id/break_fast"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_30ssp"
            android:textSize="@dimen/_15ssp"
            android:layout_marginLeft="@dimen/_5ssp"
            android:layout_marginTop="@dimen/_15ssp"
            android:hint="Ammount"
            android:textColor="@color/white"
            android:textColorHint="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_30ssp"
            android:text="Launch"
            android:textSize="@dimen/_15ssp"
            android:layout_marginLeft="@dimen/_15ssp"
            android:layout_marginTop="@dimen/_20ssp"
            android:gravity="center"
            android:textColor="@color/white"
            />
        <EditText
            android:id="@+id/launch"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_30ssp"
            android:textSize="@dimen/_15ssp"
            android:layout_marginLeft="@dimen/_5ssp"
            android:layout_marginTop="@dimen/_20ssp"
            android:hint="Ammount"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_30ssp"
            android:text="Dinner"
            android:textSize="@dimen/_15ssp"
            android:layout_marginLeft="@dimen/_15ssp"
            android:layout_marginTop="@dimen/_20ssp"
            android:gravity="center"
            android:textColor="@color/white"
            />
        <EditText
            android:id="@+id/dinner"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_30ssp"
            android:textSize="@dimen/_15ssp"
            android:layout_marginLeft="@dimen/_5ssp"
            android:layout_marginTop="@dimen/_20ssp"
            android:hint="Ammount"
            android:textColor="@color/white"
            android:textColorHint="@color/white"/>
    </LinearLayout>
    <Button
        android:id="@+id/meal_add"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_35sdp"
        android:text="meal add"
        android:textSize="@dimen/_15ssp"
        android:layout_marginTop="@dimen/_40ssp"
        android:layout_marginLeft="@dimen/_75ssp"
        />
</LinearLayout>