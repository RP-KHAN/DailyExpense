<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_312sdp"
    android:layout_height="@dimen/_540sdp"
    android:layout_marginTop="@dimen/_10sdp"
    tools:context=".FrameADDDailyExp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <DatePicker
        android:id="@+id/get_date"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_150sdp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:endYear="2100"
        android:startYear="1900"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_40sdp"></DatePicker>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp">
        <Button
            android:id="@+id/meal_id"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_30sdp"
            android:text="Dealy Meal"
            android:textSize="@dimen/_10ssp"
            android:background="?android:attr/colorMultiSelectHighlight"
            android:layout_marginLeft="@dimen/_30ssp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/sum_meal"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_10ssp"
            android:layout_gravity="center"
            android:hint="Ammount"
            android:gravity="center"
            android:textSize="@dimen/_15ssp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp">
        <TextView
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_25sdp"
            android:text="Dealy Meal"
            android:textSize="@dimen/_15ssp"
            android:background="?android:attr/colorMultiSelectHighlight"
            android:layout_marginLeft="@dimen/_30ssp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/get_transport_amount"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_10ssp"
            android:layout_gravity="center"
            android:hint="Ammount"
            android:gravity="center"
            android:textSize="@dimen/_15ssp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp">
        <TextView
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_25sdp"
            android:text="Dealy Meal"
            android:textSize="@dimen/_15ssp"
            android:background="?android:attr/colorMultiSelectHighlight"
            android:layout_marginLeft="@dimen/_30ssp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/sum_other_expences"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_10ssp"
            android:layout_gravity="center"
            android:hint="Ammount"
            android:gravity="center"
            android:textSize="@dimen/_15ssp"
            />
    </LinearLayout>
    <Button
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_50ssp"
        android:layout_gravity="center"
        android:text="ADD"
        android:textSize="@dimen/_20sdp"/>

</LinearLayout>